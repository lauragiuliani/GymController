{% extends "layoutModule.njk" %}

{% block head %}
    <title>Instructors</title>
    <link rel="stylesheet" href="/css/instructorsStyle.css">
{% endblock %}

{% block content %}

<div class="card table-container">
    <table width="100%">
        <thead>
            <tr>
                <th>Instructor</th>
                <th>Atendimento</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for instructor in instructors %}
                <td>{{ instructor.name }}</td>                
                <td>{{ instructor.services }}</td>
                <td><a href="/instructors/{{ instructor.id }}">Ver</a></td>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}